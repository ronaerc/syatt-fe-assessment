<header class="page-header">
  <link rel="stylesheet" href="/stylesheets/page-header.css" media="all">

  <div class="page-header__content content-wrapper">
    <a href="/" class="page-header__logo">
      <%= image_tag "logo.svg", class: "page-header__logo-image", alt: "Logo" %>
    </a>

    <div class="page-header__search">
      <%= partial "components/search-form" %>
    </div>

    <div class="page-header__utility">
      <%= partial "components/utility-nav" %>
    </div>

    <nav class="page-header__navigation hidden-until-wide" aria-label="Main Navigation">
      <hover-intent>
        <script src="/javascripts/hover-intent.js" type="module" defer></script>

        <%= partial "components/primary-nav" %>
      </hover-intent>
    </nav>

    <nav class="page-header__navigation hidden-at-wide" aria-label="Main Navigation">
      <wyatt-drawer>
        <script src="/javascripts/drawer.js" type="module" defer></script>
        <link rel="stylesheet" href="/stylesheets/drawer.css" media="all">

        <span class="mobile-nav__open button-reset" data-open="">
          <span class="icon icon--menu utility-nav__icon" aria-hidden="true" focusable="false" role="presentation">
            <svg xmlns="http://www.w3.org/2000/svg" height="24px" width="24px" viewBox="0 0 24 24" fill="currentColor">
              <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"></path>
            </svg>
          </span>
        </span>

        <dialog class="drawer drawer--mobile-nav drawer--left" data-dialog="">
          <div class="page-messages" data-dialog-messages=""></div>

          <div class="drawer__wrapper" data-wrapper="">
            <div class="drawer__header">
              <h2 class="drawer__title heading-5 no-margin"></h2>
              <form method="dialog" class="drawer__close">
                <button class="drawer__close-button button-reset" aria-label="Close drawer">
                  <span class="icon icon--close drawer__close-icon" aria-hidden="true" focusable="false" role="presentation">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24px" width="24px" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"></path>
                    </svg>
                  </span>
                </button>
              </form>
            </div>

            <div class="drawer__body">
              <%= partial "components/mobile-nav" %>
            </div>

            <div class="drawer__footer">
              <%= partial "components/mobile-nav__footer" %>
            </div>
          </div>
        </dialog>
      </wyatt-drawer>
    </nav>
  </div>
</header>